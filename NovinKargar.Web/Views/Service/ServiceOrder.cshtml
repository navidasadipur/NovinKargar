<!-- start blog-single-section -->
<section class="form-section">
    <div class="container">
        <div class="row">
            <div class="col col-md-10 col-md-offset-1">
                <div class="comment-respond">
                    @if (!string.IsNullOrEmpty(ViewBag.LoginError))
                    {
                        <div class="container margin-top-50">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="alert alert-warning">
                                        <span class="text-danger">@ViewBag.Error</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <h3 class="form-title">فرم ثبت سفارش را با دقت کامل کنید</h3>
                    @using (Html.BeginForm("AddServiceOrder", "Service", FormMethod.Post, new { id = "form", @class = "comment-form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="recruitment-form">
                            <div class="flex-form">
                                @Html.EditorFor(model => model.CustomerFirstName, new { htmlAttributes = new { placeholder = "نام" } })
                                @Html.ValidationMessageFor(model => model.CustomerFirstName, "", new { @class = "text-danger" })
                            </div>
                            <div class="flex-form">
                                @Html.EditorFor(model => model.CustomerLastName, new { htmlAttributes = new { placeholder = "نام خانوادگی" } })
                                @Html.ValidationMessageFor(model => model.CustomerLastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="flex-form">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "ایمیل" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                           <div class="flex-form">
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { placeholder = "شماره تماس" } })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="flex-form">
                                <input id="Service" name="Service" value="@ViewBag.ServiceTitle" disabled>
                                <input type="hidden" id="ServiceId" name="ServiceId" value="@ViewBag.ServiceId">
                            </div>

                            <div class="flex-form">
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { placeholder = "کد پستی" } })
                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="flex-form">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { placeholder = "آدرس را وارد کنید" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-textarea des-form">

                            @Html.TextAreaFor(model => model.Description, 4, 4, new { htmlAttributes = new { placeholder = "توضیحات لازم را بنویسید" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-submit btn-form">
                            <input id="submit" value="ثبت سفارش" type="submit">
                        </div>
                    }

                    @*<div class="form-submit btn-form">
                        <a href="/Customer/Auth/Register">ثبت نام</a>
                    </div>*@
                </div>
            </div>
        </div>
    </div> <!-- end container -->
</section>
<!-- end blog-single-section -->
