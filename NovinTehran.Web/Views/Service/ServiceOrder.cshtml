<!-- start blog-single-section -->
<section class="form-section">
    <div class="container">
        <div class="row">
            <div class="col col-md-10 col-md-offset-1">
                <div class="comment-respond">
                    <h3 class="form-title">فرم ثبت سفارش را با دقت کامل کنید</h3>
                    <form method="post" id="commentform" class="comment-form">

                        <div class="recruitment-form">
                            <div class="flex-form">
                                <input placeholder="نام " type="text">
                            </div>
                            <div class="flex-form">
                                <input placeholder="نام خانوادگی" type="text">
                            </div>
                            <div class="flex-form">
                                <input placeholder="ایمیل" type="email">
                            </div>
                            <div class="flex-form">
                                <input placeholder="شماره تماس" type="text">
                            </div>

                            <div class="flex-form">
                                <select name="hours" id="hours">
                                    <option>خدمات درخواستی</option>
                                    <option>بازسازی آپارتمان</option>
                                    <option>بازسازی ساختمان های قدیمی</option>
                                    <option>بازسازی دفتر کار</option>
                                </select>
                            </div>
                            <div class="flex-form">
                                <input placeholder="کد پستی" type="text">
                            </div>

                        </div>
                        <div class="form-textarea des-form">
                            <input placeholder="آدرس را وارد کنید" type="text">
                        </div>
                        <div class="form-textarea des-form">
                            <textarea id="comment" placeholder="توضیحات لازم را بنویسید"></textarea>
                        </div>
                        <div class="form-submit btn-form">
                            <input id="submit" value="ثبت سفارش" type="submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div> <!-- end container -->
</section>
<!-- end blog-single-section -->

