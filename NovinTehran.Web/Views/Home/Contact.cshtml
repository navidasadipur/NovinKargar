<!-- start page-title -->
<section class="page-title">
    <div class="container">
        <div class="row">
            <div class="col col-xs-12">
                <h2>@ViewBag.Title</h2>
            </div>
        </div> <!-- end row -->
    </div> <!-- end container -->
</section>
<!-- end page-title -->
<!-- start contact-info-section -->
<section class="contact-info-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col col-xs-12">
                <div class="contact-info clearfix">
                    <div>
                        <div class="icon">
                            <i class="ti-email"></i>
                        </div>
                        <h5>@Model.Email.Title</h5>
                        <p><a href="mailto:@Model.Email.ShortDescription">@Model.Email.ShortDescription</a></p>
                    </div>
                    <div>
                        <div class="icon">
                            <i class="ti-headphone-alt"></i>
                        </div>
                        <h5>@Model.Phone.Title</h5>
                        <p><a href="tel:@Model.Phone.ShortDescription">@Model.Phone.ShortDescription</a></p>
                    </div>
                    <div>
                        <div class="icon">
                            <i class="ti-location-pin"></i>
                        </div>
                        <h5>@Model.Address.Title</h5>
                        <p>@Model.Address.ShortDescription</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end contact-info-section -->
<!-- start contact-section -->

@Html.Action("ContactUsForm", "Home")

<!-- end contact-section -->
