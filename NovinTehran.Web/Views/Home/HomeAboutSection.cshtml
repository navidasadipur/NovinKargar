    <section class="about-section-s2 mt-5 section-padding">
        <div class="container">
            <div class="row">
                <div class="col col-md-6 text-right">
                    <div class="section-title-s3">
                        <span>درباره ما</span>
                        <h2>@ViewBag.Title</h2>
                    </div>
                    <div class="details">
                        @Html.Raw(ViewBag.Description)

                        @{
                            var descParts = new List<string>();

                            if (ViewBag.ShortDescription != null)
                            {
                                var arrDescParts = ViewBag.ShortDescription.Split('\n');

                                foreach (var item in arrDescParts)
                                {
                                    var itemStr = (string)item;

                                    descParts.Add(itemStr);
                                }
                            }
                        }
                        <ul>
                            @foreach (var desc in descParts)
                            {
                                <li>@desc</li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col col-md-6 text-left">
                    <div class="img-holder">
                        @foreach (var image in Model)
                        {
                            <img src="/Files/StaticContentImages/Image/@image.Image" alt="">
                        }
                    </div>
                </div>
            </div>
        </div> <!-- end container -->
    </section>




