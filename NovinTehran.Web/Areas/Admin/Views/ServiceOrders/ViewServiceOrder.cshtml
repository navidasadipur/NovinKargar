@model NovinTehran.Web.ViewModels.ViewServiceOrderViewModel
@{
    ViewBag.Title = "فاکتور سفارش";
}
<div class="card card-custom overflow-hidden">
    <div class="card-body p-0">
        <div class="row justify-content-center py-8 px-8 py-md-27 px-md-0">
            <div class="col-md-9">
                <div class="d-flex justify-content-between pb-10 pb-md-10 flex-column flex-md-row">
                    <h1 class="display-4 font-weight-boldest mb-10">سفارش ثبت شده</h1>
                    @*<div class="d-flex flex-column align-items-md-start px-0">
                        <span class="mb-5 mt-5">آدرس</span>
                        <span class=" d-flex flex-column align-items-md-end opacity-70">
                            <span>@Model.ServiceOrder.Address</span>
                        </span>
                    </div>*@
                </div>
                <div class="border-bottom w-100"></div>
                <div class="d-flex justify-content-between pt-6">
                    <div class="d-flex flex-column flex-root">
                        <span class="font-weight-bolder mb-2">تاریخ ثبت</span>
                        <span class="opacity-70">@Model.PersianDate</span>
                    </div>
                    <div class="d-flex flex-column flex-root">
                        <span class="font-weight-bolder mb-2">دریافت کننده</span>
                        <span class="opacity-70">@Model.ServiceOrder.CustomerFirstName @Model.ServiceOrder.CustomerLastName</span>
                    </div>
                    <div class="d-flex flex-column flex-root">
                        <span class="font-weight-bolder mb-2">ایمیل</span>
                        <span class="opacity-70">@Model.ServiceOrder.Email</span>
                    </div>
                    <div class="d-flex flex-column flex-root">
                        <span class="font-weight-bolder mb-2">شماره تماس</span>
                        <span class="opacity-70">@Model.ServiceOrder.Phone</span>
                    </div>
                    <div class="d-flex flex-column flex-root">
                        <span class="font-weight-bolder mb-2">خدمات درخواستی</span>
                        <span class="opacity-70">@Model.ServiceOrder.Service.Title</span>
                    </div>
                    <div class="d-flex flex-column flex-root">
                        <span class="font-weight-bolder mb-2">کد پستی</span>
                        <span class="opacity-70">@Model.ServiceOrder.PostalCode</span>
                    </div>

                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-gray-100 py-8 px-8 py-md-10 px-md-0">
            <div class="col-md-9">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold text-muted  text-uppercase">آدرس</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="font-weight-bolder">
                                <td>@Model.ServiceOrder.Address</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row justify-content-center bg-gray-100 py-8 px-8 py-md-10 px-md-0">
            <div class="col-md-9">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="font-weight-bold text-muted  text-uppercase">توضیحات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="font-weight-bolder">
                                <td>@Model.ServiceOrder.Description</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
            <div class="col-md-9">
                <div class="table-responsive">
                    <h1 class="display-4 font-weight-boldest mb-10">مشخصات کاربر ثبت نام شده</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="pl-0 font-weight-bold text-muted  text-uppercase">نام</th>
                                <th class="pl-0 font-weight-bold text-muted  text-uppercase">نام خانوادگی</th>
                                <th class="pl-0 font-weight-bold text-muted  text-uppercase">ایمیل</th>
                                <th class="pl-0 font-weight-bold text-muted  text-uppercase">شماره تماس</th>
                                <th class="pl-0 font-weight-bold text-muted  text-uppercase">کد پستی</th>
                                <th class="pl-0 font-weight-bold text-muted  text-uppercase">آدرس</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="font-weight-boldest">
                                @if (Model.ServiceOrder.Customer == null)
                                {
                                    <td class="pl-0 pt-7 text-danger">سفارش توسط کاربری ثبت شده که ثبت نام نکرده است</td>
                                }
                                else
                                {
                                    <td class="pl-0 pt-7">@Model.ServiceOrder.Customer.User.FirstName</td>
                                    <td class="pl-0 pt-7">@Model.ServiceOrder.Customer.User.LastName</td>
                                    <td class="pl-0 pt-7">@Model.ServiceOrder.Customer.User.Email</td>
                                    <td class="pl-0 pt-7">@Model.ServiceOrder.Customer.User.PhoneNumber</td>
                                    <td class="pl-0 pt-7">@Model.ServiceOrder.Customer.PostalCode</td>
                                    <td class="pl-0 pt-7">@Model.ServiceOrder.Customer.Address</td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row justify-content-center py-8 px-8 py-md-10 px-md-0">
            <div class="col-md-9">
                <div class="d-flex justify-content-between">
                    <a href="/Admin/ServiceOrders" class="btn btn-secondary">بازگشت</a>
                    <button type="button" class="btn btn-primary font-weight-bold" onclick="window.print();">دریافت فاکتور</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>

    </script>
}